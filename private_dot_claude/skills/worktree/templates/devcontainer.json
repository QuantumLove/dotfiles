{
  "name": "METR Development (Worktree-Compatible)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "source=${localWorkspaceFolder}/../metr-repo/.git,target=/workspace-git,type=bind",
    // Claude session persistence - share sessions between host and containers
    "source=${localEnv:HOME}/.claude/session-env,target=/home/vscode/.claude/session-env,type=bind",
    "source=${localEnv:HOME}/.claude/todos,target=/home/vscode/.claude/todos,type=bind",
    "source=${localEnv:HOME}/.claude/projects,target=/home/vscode/.claude/projects,type=bind",
    "source=${localEnv:HOME}/.claude/cache,target=/home/vscode/.claude/cache,type=bind",
    "source=${localEnv:HOME}/.claude/paste-cache,target=/home/vscode/.claude/paste-cache,type=bind",
    "source=${localEnv:HOME}/.claude/stats-cache.json,target=/home/vscode/.claude/stats-cache.json,type=bind",
    // Share Claude configuration (read-only for safety)
    "source=${localEnv:HOME}/.claude/agents,target=/home/vscode/.claude/agents,type=bind,readonly",
    "source=${localEnv:HOME}/.claude/commands,target=/home/vscode/.claude/commands,type=bind,readonly",
    "source=${localEnv:HOME}/.claude/skills,target=/home/vscode/.claude/skills,type=bind,readonly",
    "source=${localEnv:HOME}/.claude/settings.json,target=/home/vscode/.claude/settings.json,type=bind,readonly",
    "source=${localEnv:HOME}/.claude/mcp.json,target=/home/vscode/.claude/mcp.json,type=bind,readonly"
  ],
  "containerEnv": {
    "GIT_DIR": "/workspace-git",
    "LINEAR_API_KEY": "${localEnv:LINEAR_API_KEY}",
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}"
  },
  "workspaceFolder": "/workspace",
  "postCreateCommand": "git config --global --add safe.directory /workspace",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "github.vscode-pull-request-github",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "git.detectSubmodules": false,
        "git.detectWorktrees": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        }
      }
    }
  },
  "remoteUser": "vscode",
  "updateRemoteUserUID": true
}
